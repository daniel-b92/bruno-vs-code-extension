    "basic auth section": {
        "prefix": "auth:basic",
        "body": [
            "auth:basic {",
            "\tusername: ${1:name}",
            "\tpassword: ${2:password}",
            "}"
        ],
        "description": "Add section for basic auth"
    },

    "bearer auth section": {
        "prefix": "auth:bearer",
        "body": ["auth:bearer {", "\ttoken: ${1:token}", "}"],
        "description": "Add section for bearer auth"
    },

    "body section": {
        "prefix": ["body"],
        "body": ["${1|body:json,body:xml|} {", "\t${0}", "}"],
        "description": "Add section for request body"
    },

    "pre-request script section": {
        "prefix": ["script:pre-request"],
        "body": ["script:pre-request {", "\t${0}", "}"],
        "description": "Add pre-request script section"
    },

    "post-response script section": {
        "prefix": ["script:post-response"],
