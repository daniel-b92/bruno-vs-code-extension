{
    "meta section": {
        "prefix": "meta",
        "body": [
            "meta {",
            "\tname: ${1:${TM_FILENAME/(.*)\\..+$/$1/}}",
            "\ttype: ${2|http,graphql|}",
            "\tseq:${3: }${0}",
            "}"
        ],
        "description": "Add meta section"
    },

    "get section": {
        "prefix": "get",
        "body": [
            "get {",
            "\turl: ${2:http://}",
            "\tbody: ${3|none,json,xml|}",
            "\tauth: ${4|none,basic,bearer|}",
            "}"
        ],
        "description": "Add GET method section"
    },

    "post section": {
        "prefix": "post",
        "body": [
            "post {",
