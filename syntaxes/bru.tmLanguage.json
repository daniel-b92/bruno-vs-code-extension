{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "bru",
    "scopeName": "source.bru",
    "patterns": [
        {
            "include": "#dictionary-block"
        },
        {
            "include": "#code-block"
        },

        {
            "include": "#json-or-graphql-vars-body-block"
        },
        {
            "include": "#xml-body-block"
        },
        {
            "include": "#sparql-body-block"
        },
        {
            "include": "#graphql-body-block"
        },
        {
            "include": "#plain-text-block"
        },
        {
            "include": "#array-block"
        },
        {
            "include": "#strings"
        }
    ],
    "repository": {
        "dictionary-block": {
            "name": "meta.dictionary-block.bru",
            "begin": "^\\s*(meta|get|post|put|delete|options|patch|http|head|params:\\S+|headers|auth|auth:\\S+|body:multipart-form|body:form-urlencoded|body:file|vars:\\S+|assert|vars|settings)\\s*{\\s*$",
            "end": "^}\\s*$",
            "beginCaptures": { "0": { "name": "keyword.bru" } },
            "patterns": [{ "include": "#dictionary" }]
        },
        "code-block": {
            "name": "meta.code-block.bru",
            "begin": "^(tests|script:\\S+)\\s*{$",
            "end": "^}\\s*$",
            "beginCaptures": {
                "0": {
                    "name": "keyword.bru"
                }
            },
            "patterns": [
                {
                    "include": "source.js"
                }
            ]
        },
        "json-or-graphql-vars-body-block": {
            "name": "meta.json-or-graphql-vars-body-block.bru",
            "begin": "^(body:json|body:graphql:vars)\\s*{$",
            "end": "^}\\s*$",
            "beginCaptures": {
                "0": {
                    "name": "keyword.bru"
                }
            },
            "patterns": [
                {
                    "include": "source.json"
                }
            ]
        },
        "xml-body-block": {
            "name": "meta.xml-body-block.bru",
            "begin": "^body:xml\\s*{$",
            "end": "^}\\s*$",
            "beginCaptures": {
                "0": {
                    "name": "keyword.bru"
                }
            },
            "patterns": [
                {
                    "include": "text.xml"
                }
            ]
        },
        "sparql-body-block": {
            "name": "meta.sparql-body-block.bru",
            "begin": "^body:sparql\\s*{$",
            "end": "^}\\s*$",
            "beginCaptures": {
                "0": {
                    "name": "keyword.bru"
                }
            },
            "patterns": [
                {
                    "include": "source.sparql"
                }
            ]
        },
        "graphql-body-block": {
            "name": "meta.graphql-body-block.bru",
            "begin": "^body:graphql\\s*{$",
            "end": "^}\\s*$",
            "beginCaptures": {
                "0": {
                    "name": "keyword.bru"
                }
            },
            "patterns": [
                {
                    "include": "source.graphql"
                }
            ]
        },
        "plain-text-block": {
            "name": "meta.plain-text-block.bru",
            "begin": "^(body:text|docs|example)\\s*{$",
            "end": "^}\\s*$",
            "beginCaptures": {
                "0": {
                    "name": "keyword.bru"
                }
            },
            "contentName": "string.bru"
        },
        "array-block": {
            "name": "meta.array-block.bru",
            "begin": "^vars:secret\\s*\\[$",
            "end": "^\\]\\s*$",
            "beginCaptures": { "0": { "name": "keyword.bru" } },
            "patterns": [
                {
                    "match": "^\\s*([^\\s~]+[^,\\n\\]]+),?\\s*$",
                    "captures": {
                        "1": {
                            "name": "entity.name.tag.bru"
                        }
                    }
                },
                {
                    "match": "^\\s*~.*$",
                    "name": "comment.line.bru"
                }
            ]
        },
        "dictionary": {
            "patterns": [
                {
                    "begin": "^\\s*([^\\s~][^\\:]+)[\\:]\\s+(\\[)\\s*$",
                    "beginCaptures": {
                        "1": {
                            "name": "entity.name.tag.bru"
                        },
                        "2": { "name": "keyword.bru" }
                    },
                    "end": "^\\s*(\\]|\\})\\s*$",
                    "endCaptures": { "1": { "name": "keyword.bru" } },
                    "contentName": "string.bru"
                },
                {
                    "begin": "^\\s*~([^\\:]+)[\\:]\\s*\\[+\\s*$",
                    "end": "^\\s*(\\]|\\})\\s*$",
                    "name": "comment.block.bru"
                },
                {
                    "match": "^\\s*([^\\s~][^\\:]+)[\\:]\\s*([^\\[ ]+)\\s*$",
                    "captures": {
                        "1": {
                            "name": "entity.name.tag.bru"
                        },
                        "2": {
                            "name": "string.bru"
                        }
                    }
                },
                {
                    "match": "^\\s*~.*[^\\[ ]+\\s*$",
                    "name": "comment.line.bru"
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.bru",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.bru",
                    "match": "\\\\."
                }
            ]
        }
    }
}
