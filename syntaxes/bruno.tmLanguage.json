{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "bruno",
    "scopeName": "source.bru",
    "patterns": [
        {
            "include": "#dictionary-block"
        },
        {
            "include": "#script-or-test-block"
        },

        {
            "include": "#json-body-block"
        },
        {
            "include": "#xml-body-block"
        },
        {
            "include": "#sparql-body-block"
        },
        {
            "include": "#text-body-or-docs-block"
        },
        {
            "include": "#strings"
        }
    ],
    "repository": {
        "dictionary-block": {
            "name": "meta.dictionary-block.bruno",
            "begin": "^(meta|get|post|put|delete|options|patch|head|params:\\S+|headers|auth:\\S+|body:multipart-form|body:form-urlencoded|body:file|vars:\\S|assert)\\s*{$",
            "end": "^}\\s*$",
            "beginCaptures": { "0": { "name": "keyword.bruno" } },
            "patterns": [{ "include": "#dictionary" }]
        },
        "script-or-test-block": {
            "name": "meta.script-or-test-block.bruno",
            "begin": "^(tests|script:\\S+)\\s*{$",
            "end": "^}\\s*$",
            "beginCaptures": {
                "0": {
                    "name": "keyword.bruno"
                }
            },
            "patterns": [
                {
                    "include": "source.js"
                }
            ]
        },
        "json-body-block": {
            "name": "meta.json-body-block.bruno",
            "begin": "^body:json\\s*{$",
            "end": "^}\\s*$",
            "beginCaptures": {
                "0": {
                    "name": "keyword.bruno"
                }
            },
            "patterns": [
                {
                    "include": "source.json"
                }
            ]
        },
        "xml-body-block": {
            "name": "meta.xml-body-block.bruno",
            "begin": "^body:xml\\s*{$",
            "end": "^}\\s*$",
            "beginCaptures": {
                "0": {
                    "name": "keyword.bruno"
                }
            },
            "patterns": [
                {
                    "include": "text.xml"
                }
            ]
        },
        "sparql-body-block": {
            "name": "meta.sparql-body-block.bruno",
            "begin": "^body:sparql\\s*{$",
            "end": "^}\\s*$",
            "beginCaptures": {
                "0": {
                    "name": "keyword.bruno"
                }
            },
            "patterns": [
                {
                    "include": "source.sparql"
                }
            ]
        },
        "text-body-or-docs-block": {
            "name": "meta.text-body-block.bruno",
            "begin": "^(body:text|docs)\\s*{$",
            "end": "^}\\s*$",
            "beginCaptures": {
                "0": {
                    "name": "keyword.bruno"
                }
            },
            "patterns": [
                {
                    "include": "text.html.markdown"
                }
            ]
        },
        "dictionary": {
            "patterns": [
                {
                    "match": "^\\s*([^\\:]+)[\\:]\\s+([^\\n]+)\\s*$",
                    "captures": {
                        "1": {
                            "name": "entity.name.tag.bruno"
                        },
                        "2": {
                            "name": "string.bruno"
                        }
                    }
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.bruno",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.bruno",
                    "match": "\\\\."
                }
            ]
        }
    }
}
