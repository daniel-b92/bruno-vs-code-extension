{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "lib": ["es2020"],
        "outDir": "out",
        "sourceMap": true,
        "strict": true,
        "rootDir": "src",
        "plugins": [{ "name": "@zentryc5t/ts-plugin-for-bruno" }],

        "allowUnreachableCode": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true
    },
    "exclude": ["node_modules", ".vscode-test", "**/*.md"]
}
