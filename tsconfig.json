{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "lib": ["es2020"],
        "outDir": "out",
        "sourceMap": true,
        "strict": true,
        // for using local ts plugin: "plugins": [{ "name": "typescript-for-bruno" }],
        "plugins": [{ "name": "@zentryc5t/ts-plugin-for-bruno" }],

        "allowUnreachableCode": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true
    },
    "include": ["client", "server", "shared"],
    "exclude": ["**/node_modules", ".vscode-test", "**/*.md"]
}
