{
    "name": "bruno-cli-test-runner-experiment",
    "displayName": "bruno-cli-test-runner-experiment",
    "description": "Bruno test runner via Bruno CLI",
    "version": "0.0.3",
    "publisher": "dbe",
    "private": true,
    "license": "MIT",
    "repository": "https://github.com/Microsoft/vscode-extension-samples",
    "engines": {
        "vscode": "^1.88.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:**/*.bru"
    ],
    "main": "./dist/extension",
    "contributes": {
        "configuration": {
            "title": "BrunoTestExtension",
            "properties": {
                "brunoTestExtension.testRunEnvironment": {
                    "type": "string",
                    "default": "Prod",
                    "description": "The name of the environment to use for running Bruno tests with."
                }
            }
        },
        "views": {
            "explorer": [
                {
                    "id": "brunoTestData",
                    "name": "Bruno Test Data"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack --mode development",
        "lint": "eslint",
        "watch": "webpack --mode development --watch",
        "package": "webpack --mode production --devtool hidden-source-map"
    },
    "devDependencies": {
        "@eslint/js": "^9.13.0",
        "@stylistic/eslint-plugin": "^2.9.0",
        "@types/node": "^20",
        "@types/vscode": "^1.88.0",
        "eslint": "^9.13.0",
        "ts-loader": "^9.5.2",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.16.0",
        "webpack": "^5.97.1",
        "webpack-cli": "^6.0.1"
    },
    "dependencies": {
        "@usebruno/cli": "^1.38.3"
    }
}
