{
    "name": "bruno-cli-test-runner-experiment",
    "displayName": "bruno-cli-test-runner-experiment",
    "description": "Bruno test runner via Bruno CLI",
    "version": "0.8.0",
    "publisher": "dbe",
    "private": true,
    "license": "MIT",
    "repository": "https://github.com/Microsoft/vscode-extension-samples",
    "engines": {
        "vscode": "^1.88.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:**/*.bru"
    ],
    "main": "./dist/extension",
    "contributes": {
        "configuration": {
            "title": "BrunoTestExtension",
            "properties": {
                "brunoTestExtension.testRunEnvironment": {
                    "type": "string",
                    "description": "The name of the environment to use for running Bruno tests with."
                }
            }
        },
        "snippets": [
            {
                "language": "bruno",
                "path": "./src/languageFeatures/bruno_snippets.json"
            }
        ],
        "commands": [
            {
                "command": "brunoCollectionsView.refresh",
                "title": "Refresh",
                "icon": "$(extensions-refresh)"
            },
            {
                "command": "brunoCollectionsView.deleteItem",
                "title": "Delete"
            },
            {
                "command": "brunoCollectionsView.duplicateFile",
                "title": "Duplicate"
            },
            {
                "command": "brunoCollectionsView.duplicateFolder",
                "title": "Duplicate"
            },
            {
                "command": "brunoCollectionsView.renameItem",
                "title": "Rename"
            },
            {
                "command": "brunoCollectionsView.createFile",
                "title": "Create file"
            },
            {
                "command": "brunoCollectionsView.createFolder",
                "title": "Create folder"
            },
            {
                "command": "brunoCollectionsView.startTestRun",
                "title": "Start test run"
            }
        ],
        "views": {
            "explorer": [
                {
                    "id": "brunoCollectionsView",
                    "name": "Bruno Collections",
                    "icon": ""
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "brunoCollectionsView.refresh",
                    "when": "view == brunoCollectionsView",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "brunoCollectionsView.startTestRun",
                    "when": "view == brunoCollectionsView",
                    "group": "navigation@1"
                },
                {
                    "command": "brunoCollectionsView.createFile",
                    "when": "view == brunoCollectionsView && (treeElementCanExpand || treeElementCanCollapse)",
                    "group": "navigation@10"
                },
                {
                    "command": "brunoCollectionsView.createFolder",
                    "when": "view == brunoCollectionsView && (treeElementCanExpand || treeElementCanCollapse)",
                    "group": "navigation@11"
                },
                {
                    "command": "brunoCollectionsView.renameItem",
                    "when": "view == brunoCollectionsView",
                    "group": "navigation@20"
                },
                {
                    "command": "brunoCollectionsView.duplicateFile",
                    "when": "view == brunoCollectionsView && !treeElementCanExpand && !treeElementCanCollapse",
                    "group": "navigation@21"
                },
                {
                    "command": "brunoCollectionsView.duplicateFolder",
                    "when": "view == brunoCollectionsView && (treeElementCanExpand || treeElementCanCollapse)",
                    "group": "navigation@22"
                },
                {
                    "command": "brunoCollectionsView.deleteItem",
                    "when": "view == brunoCollectionsView",
                    "group": "navigation@30"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack --mode development",
        "lint": "eslint",
        "watch": "webpack --mode development --watch",
        "package": "webpack --mode production --devtool hidden-source-map"
    },
    "devDependencies": {
        "@eslint/js": "^9.13.0",
        "@stylistic/eslint-plugin": "^2.13.0",
        "@types/node": "^20.17.24",
        "@types/vscode": "^1.98.0",
        "eslint": "^9.22.0",
        "ts-loader": "^9.5.2",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.26.1",
        "webpack": "^5.98.0",
        "webpack-cli": "^6.0.1"
    },
    "dependencies": {
        "@usebruno/cli": "^1.39.0"
    }
}
