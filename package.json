{
    "name": "bruno-cli-test-runner-experiment",
    "displayName": "bruno-cli-test-runner-experiment",
    "description": "Bruno test runner via Bruno CLI",
    "version": "0.0.1",
    "publisher": "dbe",
    "private": true,
    "license": "MIT",
    "repository": "https://github.com/Microsoft/vscode-extension-samples",
    "engines": {
        "vscode": "^1.88.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:**/*.bru"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "BrunoTestExtension",
            "properties": {
                "brunoTestExtension.testRunEnvironment": {
                    "type": "string",
                    "default": "Prod",
                    "description": "The name of the environment to use for running Bruno tests with."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@eslint/js": "^9.13.0",
        "@stylistic/eslint-plugin": "^2.9.0",
        "@types/node": "^20",
        "@types/vscode": "^1.88.0",
        "eslint": "^9.13.0",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.16.0"
    },
    "dependencies": {
        "@usebruno/cli": "^1.36.3"
    }
}
